<view class="container">
  <view class="person">
    <view class="title">
      <sup class="upper">*</sup>收货人信息</view>
    <view class="inputBox">
      <label class="label">收货人
        <input class="input" placeholder="填写姓名" />
      </label>
    </view>
    <view class="inputBox">
      <label class="label">手机号
        <input class="input" placeholder="填写手机号" />
      </label>
    </view>
  </view>
  <view class="person">
    <view class="title">
      <sup class="upper">*</sup>收货人信息</view>
    <view class="inputBox">
      <label class="label">省市区
        <picker class="pickerBox" mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="picker">
            {{region[0]}}，{{region[1]}}，{{region[2]}}
          </view>
        </picker>
      </label>
    </view>
  </view>
  <view class="textarea">
    <textarea bindblur="bindTextAreaBlur" style="width: 690rpx;" cursor-spacing="50" maxlength="200" placeholder="街道地址（限200字符）" />
  </view>
</view>