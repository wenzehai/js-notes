.page {
  background: #fff;
}

.container {
  padding: 0 0 300rpx 0;
  background: #fff;
  height: 100%;
}

.list {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  padding: 30rpx;
  background: #fff;
  border-top: 30rpx solid #efeff4;
}

.check {
  width: 90rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.detail {
  width: 600rpx;
  display: flex;
  flex-flow: row;
  justify-content: left;
  height: 200rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
}

.text {
  margin-left: 30rpx;
}

.title {
  font-size: 14px;
  overflow: hidden;
  width: 370rpx;
  line-height: 36rpx;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.desc {
  margin-top: 10rpx;
  font-size: 14px;
  color: #888;
}

.btnCon {
  margin-top: 30rpx;
  display: flex;
  font-size: 12px;
  justify-content: flex-end;
}
checkbox .wx-checkbox-input {
  border-radius: 50%;
}
.num {
  display: block;
  width: 50rpx;
  height: 48rpx;
  background: #fff;
  text-align: center;
  line-height: 48rpx;
  border-top: 1px solid #f5f5fa;
  border-bottom: 1px solid #f5f5fa;
}

.minus {
  display: block;
  width: 50rpx;
  height: 50rpx;
  background: #f5f5fa;
  text-align: center;
  line-height: 50rpx;
}

.add {
  display: block;
  width: 50rpx;
  height: 50rpx;
  background: #f5f5fa;
  text-align: center;
  line-height: 50rpx;
}

.bottom {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-flow: row;
  margin-bottom: 300rpx;
}
.totalPrice {
  margin-right: 30rpx;
  text-align: right;
  align-items: center;
  font-size: 14px;
  margin-top: 28rpx;
}
.btn {
  width: 256rpx;
  height: 88rpx;
  margin-right: 0;
}
