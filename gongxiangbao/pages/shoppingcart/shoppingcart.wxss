.container {
  padding-bottom: 200rpx;
}

.arrowBtn::after {
  border: none;
}

.list-box{
  padding: 30rpx;
  border-top: 30rpx solid #e4e4e4;
  position: relative;
  height: 200rpx;
}

.checkbtn {
  position: absolute;
  left: 30rpx;
  top: 80rpx;
}
.list-box-img{
  position: absolute;
  left: 100rpx;
  top: 30rpx;
}
.list-box-ctn{
  position: absolute;
  top: 30rpx;
  left: 320rpx;
}
.list-box-title{
    font-size: 14px;
    width: 400rpx;
    overflow: hidden;
    line-height: 36rpx;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.list-box-desc{
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #888;
}

.list-box-subCtn {
    display: flex;
    font-size: 12px;
    margin-top: 60rpx;
    justify-content: flex-end;
}
.num {
  display: block;
  width: 50rpx;
  height: 48rpx;
  background: #fff;
  text-align: center;
  line-height: 48rpx;
  border-top: 1px solid #f5f5fa;
  border-bottom: 1px solid #f5f5fa;
}
.minus {
  display: block;
  width: 50rpx;
  height: 50rpx;
  background: #f5f5fa;
  text-align: center;
  line-height: 50rpx;
}
.add {
  display: block;
  width: 50rpx;
  height: 50rpx;
  background: #f5f5fa;
  text-align: center;
  line-height: 50rpx;
}
.otherList {
  margin-left: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}
.oneList {
    border-bottom: 1px solid #f5f5f5;
    line-height: 86rpx;
    display: flex;
    font-size: 14px;
    padding: 0 30rpx;
    justify-content: space-between;
}

.expressCon {
  margin-left: 30rpx;
}
.twoList {
  border-bottom: 1px solid #f5f5f5;
  line-height: 86rpx;
  display: flex;
  font-size: 14px;
  padding: 0 30rpx;
  justify-content: flex-start;
}
.message {
  line-height: 86rpx;
  /* background: red; */
  margin-left: 20rpx;
  width: 500rpx;
  height: 86rpx;
}
.lastList {
  /* border-bottom: 1px solid #f5f5f5; */
  line-height: 86rpx;
  display: flex;
  font-size: 14px;
  padding: 0 30rpx;
  justify-content: flex-end;
}

.bottom {
  background: #fff;
  height: 128rpx;
  border-top: 1px solid #eeeeee;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
}
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}
.submitBtn {
  margin: 20rpx 20rpx;
  display: block;
}