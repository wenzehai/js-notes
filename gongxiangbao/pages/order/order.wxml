<view class="container">
  <view class="addressBox">
    <text class="title">{{addressInfo.name}}{{addressInfo.tel}}</text>
    <text class="address">{{addressInfo.address}}</text>
    <button class="arrowBtn"></button>
  </view>

  <!-- 商品列表 -->
  <view class="list">
    <view class="list-box">
        <image class="list-box-img" src="../../image/goods.png" style="width: 200rpx;height: 200rpx;"></image>
        <view class="list-box-ctn">
          <view class="list-box-title">{{title}}</view>
          <view class="list-box-desc">{{color}}</view>
            <view class="list-box-subCtn">
                 <view class="list-box-price">￥{{price}}</view>
                 <view class="list-box-num">X{{num}}</view>
             </view>
                      
        </view>
      </view>
  </view>
  <!-- 订单其他 -->
   <view class="otherList">
      <view class="oneList">
        <view class="listLabel">全场包邮</view>
        <view class="listCon">￥0.00</view>
      </view>
      <view class="twoList">
        <view class="listLabel">快递方式</view>
        <view class="expressCon">
          <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{items}}">
              <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
            </label>
          </radio-group>
        </view>
      </view>
      <view class="twoList">
        <view class="listLabel">买家留言</view>
        <view class="messageCon">
          <input class="message" placeholder="选填：留言40字以内"/>
        </view>
      </view>
      <view class="lastList">
        <view class="totalPriceCon">￥{{price*num}}</view>
      </view>
   </view>

   <!-- 底部按钮 -->
  <view class="bottom">
      <button class="submitBtn" type="warn" style="width: 690rpx;"> 加入购物车 </button>
  </view>

</view>